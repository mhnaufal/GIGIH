<h1> Items </h1>
<% if @items.any? %>
<table>
  <thead>
    <tr>
        <td><b>Name</b></td>
        <td><b>Price</b></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= link_to "Show", item_path(item) %></td>
        <td><%= link_to "Edit", edit_item_path(item) %></td>
        <td><%= button_to "Delete", item, :confirm => "Yakin ingin menghapus item ini?", :method => :delete %></td>
    <% end %>
      </tr>
  </tbody>
</table>
<% else %>
  <p>Item kosong</p>
<% end %>
  
<a href="/items/new">New Item</a>